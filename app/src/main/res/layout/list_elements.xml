<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"

    android:background="@android:color/holo_orange_light">

    <TextView
        android:id="@+id/txtSpanish_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spanish"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imgHearth_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEnglish_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="English"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imgHearth_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSpanish_list" />

    <ImageView
        android:id="@+id/imgHearth_list"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/heart_outlined"
        app:layout_constraintBottom_toBottomOf="@+id/txtEnglish_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtSpanish_list" />



</androidx.constraintlayout.widget.ConstraintLayout>